PORT=5000
NODE_ENV=development

# MongoDB
MONGODB_URI=mongodb://localhost:27017/email_automation

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=7d

# Brevo (Primary)
BREVO_API_KEY=your_brevo_api_key

# Brevo Backup (optional)
BREVO_API_KEY_BACKUP=your_backup_brevo_api_key

# SMTP (Fallback)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password

# Rate Limiting
MAX_EMAILS_PER_HOUR=10000
MAX_EMAILS_PER_BATCH=1000

# Client URL (for CORS and Socket.io)
CLIENT_URL=http://localhost:3000

